<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HandiMundaButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/handi_munda_button_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="handimundapokerappText">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFFFFF</item>
       <!-- <item name="android:fontFamily">@font/inter_variable_font</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="how_to_play">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="handiMunda">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <!-- Другие атрибуты стиля -->
    </style>
</resources>