<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Последняя рамка (тень) -->
    <item android:left="2dp" android:top="4dp" android:right="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#A36400"/> <!-- Цвет тени -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Промежуточная рамка -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="7dp">
        <shape android:shape="rectangle">
            <solid android:color="#FDCD0D"/> <!-- Цвет промежуточной рамки -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Оранжевая рамка -->
    <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="9dp">
        <shape android:shape="rectangle">
            <solid android:color="#F9B212"/> <!-- Цвет оранжевой рамки -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Бордовая рамка -->
    <item android:left="8dp" android:top="7dp" android:right="7dp" android:bottom="11dp">
        <shape android:shape="rectangle">
            <solid android:color="#891010"/> <!-- Цвет бордовой рамки -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Блеск сверху -->
    <item android:left="10dp" android:top="8dp" android:right="10dp" android:height="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF8080"/> <!-- Цвет блеска -->
            <corners android:topLeftRadius="10dp" android:topRightRadius="10dp"/>
        </shape>
    </item>

    <!-- Основной красный фон с градиентом -->
    <item android:left="10dp" android:top="14dp" android:right="10dp" android:bottom="14dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <gradient
                android:startColor="#F70202"
                android:centerColor="#E60404"
                android:endColor="#C40A0A"
                android:type="linear"
                android:angle="270"/>
        </shape>
    </item>


</layer-list>
